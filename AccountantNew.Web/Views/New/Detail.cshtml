@model AccountantNew.Web.Models.NewViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Layouts.cshtml";
    string pageTitle = ViewBag.PageTitle;
    var ModelCurrencyRate = ViewBag.Model as AccountantNew.Web.Models.HomeViewModel;
}

@section pageTitle{
    <section id="page-title">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-wrapper" style="background-image:url(/Assets/client/img/sub-header/subHeader.jpg)">
                <div class="container">
                    <h2 class="pull-left title"> <span class="cat-icon">@pageTitle.Substring(0, 1) </span> @pageTitle</h2>
                    <ol class="breadcrumb pull-right">
                        <li><a href="/">Trang chủ</a></li>
                        <li><a href="#">Danh mục</a></li>
                        <li class="active">@pageTitle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
}

<section class="main-wrapper single-category">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12">
                        <img src="@Model.Image" class="img-100p" alt="img">
                        <h2 class="main-entry-title">@Model.Name</h2>
                        <div class="entry-blog-meta">
                            <div class="entry-blog-meta-list">
                                <div class="author-avatar">
                                    <img alt="" style="width:31px;height:31px;" src="@(Model.ApplicationUser != null? Model.ApplicationUser.Avartar : "~/Assets/client/img/comm-user.jpg")">
                                </div>
                                <div class="author-avatar-text">
                                    <p class="author"> <a href="#" title="Posts by NewEdge" rel="author">@(Model.ApplicationUser != null? Model.ApplicationUser.FullName : "")</a></p>
                                    <span class="entry-date"><time>@Model.CreatedDate</time></span>,
                                    <span class="cats"><a href="#" rel="category tag">@pageTitle</a></span>
                                </div>
                            </div>

                            <div class="entry-blog-meta-list">
                                <div class="share-count">
                                    <span class="number">@Model.ViewCount</span><span>Views</span>
                                </div>
                            </div>
                        </div>

                        <div class="entry-summary">
                            <p>
                                @Html.Raw(Model.Content)
                            </p>
                        </div>

                        <div class="post-meta-info">
                            
                        </div>
                    </div>

                </div>
            </div>
            
            <div class="col-sm-3">
                @Html.Partial("Col3Partial",ModelCurrencyRate)
            </div>
        </div>
    </div>
</section>
