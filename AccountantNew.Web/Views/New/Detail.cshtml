@model AccountantNew.Web.Models.NewViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Layouts.cshtml";
    string pageTitle = ViewBag.PageTitle;
    var ModelCurrencyRate = ViewBag.Model as AccountantNew.Web.Models.HomeViewModel;
}

@section pageTitle{
    <section id="page-title">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-wrapper" style="background-image:url(/Assets/client/img/sub-header/subHeader.jpg)">
                <div class="container">
                    <h2 class="pull-left title"> <span class="cat-icon">@pageTitle.Substring(0, 1) </span> @pageTitle</h2>
                    <ol class="breadcrumb pull-right">
                        <li><a href="/">Trang chủ</a></li>
                        <li><a href="#">Danh mục</a></li>
                        <li class="active">@pageTitle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
}

<section class="main-wrapper single-category">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12">
                        <img src="@Model.Image" class="img-100p" alt="img">
                        <h2 class="main-entry-title">@Model.Name</h2>
                        <div class="entry-blog-meta">
                            <div class="entry-blog-meta-list">
                                <div class="author-avatar">
                                    <img alt="" src="~/Assets/client/img/comm-user.jpg">
                                </div>
                                <div class="author-avatar-text">
                                    <p class="author"> <a href="#" title="Posts by NewEdge" rel="author">Gala</a></p>
                                    <span class="entry-date"><time>@DateTime.Now</time></span>,
                                    <span class="cats"><a href="#" rel="category tag">Tin tức</a></span>
                                </div>
                            </div>

                            <div class="entry-blog-meta-list">
                                <div class="share-count">
                                    <span class="number">2.86k</span><span>Views</span>
                                </div>
                            </div>
                        </div>

                        <div class="entry-summary">
                            <p>
                                @Html.Raw(Model.Content)
                            </p>
                        </div>

                        <div class="post-meta-info">
                            <div class="post-meta-info-list tags">
                                <i class="fa fa-tags"></i>
                                <div class="post-meta-info-list-in tags-in">
                                    <p>Tags</p>
                                    <a href="#">Culture, </a>
                                    <a href="#">Music</a>
                                </div>
                            </div>
                            <div class="post-meta-info-list comments">
                                <i class="fa fa-comments-o"></i>
                                <div class="post-meta-info-list-in comments-in">
                                    <p>Comments</p>
                                    <a href="#"><span class="leave-reply">No comment</span></a>
                                </div>
                            </div>
                            <div class="post-meta-info-list category">
                                <i class="fa fa-folder-open-o"></i>
                                <div class="post-meta-info-list-in category-in">
                                    <p>Category</p>
                                    <a href="#" rel="category tag">Business</a>
                                </div>
                            </div>
                            <div class="post-meta-info-list date">
                                <i class="fa fa-calendar-o"></i>
                                <div class="post-meta-info-list-in date-in">
                                    <p>Date</p>
                                    <time class="entry-date">Nov 18, 2015</time>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
            <div class="col-sm-3">
                @Html.Partial("Col3Partial",ModelCurrencyRate)
            </div>
        </div>
    </div>
</section>
