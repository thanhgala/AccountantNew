@model IEnumerable<AccountantNew.Web.Models.CommentViewModel>

<script type="text/javascript">
        $(document).ready(function () {
            toastr.options = {
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "fadeIn": 300,
                "fadeOut": 1000,
                "timeOut": 3000,
                "extendedTimeOut": 1000
            };
            @if (TempData["AlertMessage"] != null)
            {
                if((string)TempData["AlertType"] == "success")
                {
                    @:toastr.success("@TempData["AlertMessage"]");
                }
                if((string)TempData["AlertType"] == "warning")
                {
                    @:toastr.warning("@TempData["AlertMessage"]");
                }
                if((string)TempData["AlertType"] == "error")
                {
                    @:toastr.error("@TempData["AlertMessage"]");
                }
            }
        });
</script>   

<div class="boxedtitle page-title">
    <h2>
        Bình luận(
        <span class="color" id="tang1">@Model.Count()</span>
        )
    </h2>
</div>
<ol class="commentlist clearfix" id="add-cmt">

    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="comment-body clearfix">
                <div class="avatar"><img alt="" src="http://online.khoapham.vn/user/img/0.jpg"></div><div class="comment-text">
                    <div class="author clearfix">
                        <div class="comment-author"><a href="">Gala Đỗ</a></div><div class="comment-meta"><div class="date"><i class="icon-time"></i>@item.CreateDate</div></div>
                    </div>
                    <div class="text">
                        <p>@Html.Raw(item.Content)</p>
                    </div>
                </div>
            </div>
        </li>
    }
</ol>

