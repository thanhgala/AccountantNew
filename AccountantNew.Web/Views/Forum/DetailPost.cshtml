@model AccountantNew.Web.Models.PostViewModel
@{
    ViewBag.Title = "DetailPost";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@section footerJS
{
    <script type="text/javascript">
    tinymce.init({
        selector: '.textarea',
        height: 200,
        width :800,
        menubar: false,
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table contextmenu paste code'
        ],
        toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
        skin: 'lightgray'
    });
    </script>
}

@section pageTitle{
    <section id="page-title">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-wrapper" style="background-image:url(/Assets/client/img/sub-header/subHeader.jpg)">
                    <div class="container">
                        <h2 class="pull-left title"> <span class="cat-icon">@Model.Name.Substring(0, 1) </span> @Model.Name</h2>
                        <ol class="breadcrumb pull-right">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="#">Danh mục</a></li>
                            <li class="active">@Model.Name</li>
                        </ol>
                    </div> <!-- //container -->
                </div> <!-- //page-title-wrapper -->
            </div>
        </div> <!-- //row -->
    </section>
}

<section class="main-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="tabs-warp question-tab">
                            <div class="tab-inner-warp">
                                <div class="tab-inner">
                                    <article class="question question-type-normal">
                                        <h2>
                                            <a href="#">@Model.Name</a>
                                        </h2>

                                        <div class="question-author">
                                            <a href="" original-title="ahmed" class="question-author-img tooltip-n"><span></span><img alt="" src="~/Assets/client/img/forum-icon-15.png"></a>
                                        </div>
                                        <div class="question-inner">
                                            <div class="clearfix"></div>
                                            <div class="question-desc">
                                                @Html.Raw(Model.Content)
                                                <p>&nbsp;</p>
                                                <p>&nbsp;</p>
                                            </div>
                                            <span class="question-category"><a href="#"><i class="fa fa-folder"></i>@ViewBag.CateName</a></span>
                                            <span class="question-date"><i class="fa fa-clock-o"></i>@Model.CreatedDate</span>
                                            <span class="question-comment"><a href="#"><i class="fa fa-comment"></i>0 Answer</a></span>
                                            <span class="question-view"><i class="fa fa-user"></i>@Model.ViewCount views</span>
                                            <div class="clearfix"></div>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                        <div class="page-content ask-question">
                            <div class="boxedtitle page-title">
                                <h2>Bình luận</h2>
                                <div class="form-style form-style-3" id="question-submit">
                                    @*@using (Html.BeginForm("DetailPost", "Forum", FormMethod.Post, new { id = "question-submit", @enctype = "multipart/form-data" }))
                                    {*@
                                        @Html.AntiForgeryToken()
                                        <div class="form-textarea">
                                            <p>
                                                <label class="required">Nội dung<span>*</span></label>
                                            </p>
                                            <div class="col-xs-12 col-sm-12" style="margin:20px 8px; padding: 0 -15px">
                                                <textarea name="Content" class="textarea"></textarea>
                                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "form-description" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <p class="form-submit">
                                                <input type="submit" id="publish-question" value="Trả lời" class="btn btn-success">
                                            </p>
                                        </div>
                                    @*}*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

