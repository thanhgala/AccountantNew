@model AccountantNew.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section pageTitle{
<section class="newedge-slider default img-overlay">
    <div class="newedge-slider-content">
        <div id="main-slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                @{var firstHotNew = Model.HotNews.First(); }
                <div class="item active" style="background-image: url(@firstHotNew.Image);">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 col-sm-7 col-xs-12 next-post">
                                <div class="next-post-wrapper">
                                    <div>
                                        <p class="slide-cat">
                                            <a href="/tin-moi.html"><span class="cat-icon"> T</span>@firstHotNew.NewCategory.Name</a>
                                        </p>
                                        <h2 class="slide-title">
                                            @{var urlHotSlide = "/tin-moi" +  "/" + firstHotNew.Alias + "-" + firstHotNew.ID + ".html";
                                            }
                                            <a href="@urlHotSlide">@firstHotNew.Name</a>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            @foreach (var item in Model.HotNews.Skip(1))
            {
                <div class="item" style="background-image: url(@item.Image);">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 col-sm-7 col-xs-12 next-post">
                                <div class="next-post-wrapper">
                                    <div>
                                        <p class="slide-cat">
                                            <a href="/tin-moi.html"><span class="cat-icon"> T</span>@item.NewCategory.Name</a>
                                        </p>
                                        <h2 class="slide-title">
                                            @{var urlHotSlide2 = "/tin-moi" + "/" + item.Alias + "-" + item.ID + ".html";
                                            }
                                            <a href="@urlHotSlide2">@item.Name</a>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div> <!-- //carousel-inner -->
            <div class="container">
                <div class="customNavigation carousel-controls">
                    <a class="left" data-target="#main-slider" role="button" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                    <a class="right" data-target="#main-slider" role="button" data-slide="next"><i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div> <!-- //newedge-slider-content -->
</section>
}
<section class="main-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <!-- Tin tức -->
