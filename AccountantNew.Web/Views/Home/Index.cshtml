                                <div class="article-inner">
                                    <div class="overlay"></div>
                                    <div class="img-wrapper"><img class="img-100p latest-post-image thumb-large" src="@modelFirstNew.Image" alt="img"></div>
                                    <div class="article-info">
                                        <p class="slide-cat">
                                            <a href="#">
                                                <span class="cat-icon cat-icon-color01"> T</span>@modelFirstNew.NewCategory.Name
